<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogConfirmCreate_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp" >

    <TextView
        android:id="@+id/locationRow_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/locationRow_image_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_action_remove"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/locationRow_image_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/locationRow_image_remove"
        android:src="@drawable/ic_action_edit" 
        android:visibility="gone"/>

</RelativeLayout>
