<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:top="2dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#ff505050" />
        </shape>
    </item>
    <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff505050" android:endColor="#ff707070" android:angle="270" android:centerColor="#ff606060" />
        </shape>
    </item>
</layer-list>
