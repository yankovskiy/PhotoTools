<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogConfirmCreate_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/dialogConfirmCreate_label_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogConfirmCreate_message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/dialogConfirmCreate_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:visibility="gone"
        android:hint="@string/dialogConfirmCreate_label_locationName" >
    </EditText>

    <CheckBox
        android:id="@+id/dialogConfirmCreate_checkbox_isSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogConfirmCreate_checkbox_isSave" />

</LinearLayout>